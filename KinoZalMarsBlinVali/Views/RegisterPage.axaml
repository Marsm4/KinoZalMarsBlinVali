<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="KinoZalMarsBlinVali.Views.RegisterPage">
    <Grid Background="#f5f5f5">
        <Border Background="White" 
                CornerRadius="10" 
                Padding="40" 
                Width="450" 
                Height="600"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                BorderBrush="#e0e0e0" 
                BorderThickness="1">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*" 
                  Margin="0,20,0,0">
                <TextBlock Grid.Row="0" Text="🎬 Регистрация зрителя" 
                           FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20" 
                           Foreground="#0066CC"/>
                
                <!-- Имя -->
                <TextBlock Grid.Row="1" Text="Имя" FontWeight="SemiBold" FontSize="14"/>
                <TextBox Grid.Row="2" x:Name="tbFirstName" Margin="0,5,0,10" 
                         FontSize="14" Height="35"
                         Watermark="Введите имя"/>
                
                <!-- Фамилия -->
                <TextBlock Grid.Row="3" Text="Фамилия" FontWeight="SemiBold" FontSize="14"/>
                <TextBox Grid.Row="4" x:Name="tbLastName" Margin="0,5,0,10" 
                         FontSize="14" Height="35"
                         Watermark="Введите фамилию"/>
                
                <!-- Email -->
                <TextBlock Grid.Row="5" Text="Email" FontWeight="SemiBold" FontSize="14"/>
                <TextBox Grid.Row="6" x:Name="tbEmail" Margin="0,5,0,10" 
                         FontSize="14" Height="35"
                         Watermark="Введите email"/>
                
                <!-- Телефон -->
                <TextBlock Grid.Row="7" Text="Телефон" FontWeight="SemiBold" FontSize="14"/>
                <TextBox Grid.Row="8" x:Name="tbPhone" Margin="0,5,0,10" 
                         FontSize="14" Height="35"
                         Watermark="Введите телефон"/>
                
                <!-- Пароль -->
                <TextBlock Grid.Row="9" Text="Пароль" FontWeight="SemiBold" FontSize="14"/>
                <TextBox Grid.Row="10" x:Name="tbPassword" Margin="0,5,0,20" 
                         FontSize="14" Height="35"
                         PasswordChar="*"
                         Watermark="Придумайте пароль"/>
                
                <!-- Кнопки -->
                <StackPanel Grid.Row="11" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Spacing="15">
                    <Button Content="Зарегистрироваться" Click="Register_Click" 
                            Background="#00A651" Foreground="White" 
                            Padding="20,10" FontWeight="Bold" FontSize="14"/>
                    <Button Content="Назад" Click="Back_Click" 
                            Background="#6c757d" Foreground="White" 
                            Padding="30,10" FontWeight="Bold" FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>