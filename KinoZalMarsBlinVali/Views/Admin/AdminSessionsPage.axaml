<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="KinoZalMarsBlinVali.Views.AdminSessionsPage">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="📅 Управление сеансами" 
                   FontSize="24" FontWeight="Bold" Foreground="#0066CC"
                   Margin="0,0,0,20"/>

        <!-- Панель действий -->
        <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Spacing="15">
                <Button Content="➕ Добавить сеанс" Click="AddSession_Click"
                        Background="#00A651" Foreground="White" 
                        Padding="20,10" FontWeight="Bold"/>
                <Button Content="🔄 Обновить" Click="Refresh_Click"
                        Background="#0066CC" Foreground="White" 
                        Padding="20,10" FontWeight="Bold"/>
                <ComboBox x:Name="DateFilterComboBox" Width="150" SelectedIndex="0">
                    <ComboBoxItem Content="Все сеансы"/>
                    <ComboBoxItem Content="Сегодня"/>
                    <ComboBoxItem Content="Завтра"/>
                    <ComboBoxItem Content="На этой неделе"/>
                </ComboBox>
                <TextBox x:Name="SearchTextBox" Width="300" 
                         Watermark="Поиск по фильму..."
                         VerticalContentAlignment="Center"/>
                <Button Content="🔍 Поиск" Click="Search_Click"
                        Background="#FF6B35" Foreground="White" 
                        Padding="20,10" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Таблица сеансов -->
        <DataGrid Grid.Row="2" x:Name="SessionsDataGrid" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding SessionId}" Width="60"/>
                <DataGridTextColumn Header="Фильм" Binding="{Binding Movie.Title}" Width="200"/>
                <DataGridTextColumn Header="Зал" Binding="{Binding Hall.HallName}" Width="120"/>
                <DataGridTextColumn Header="Начало" Binding="{Binding StartTime, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" Width="150"/>
                <DataGridTextColumn Header="Окончание" Binding="{Binding EndTime, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" Width="150"/>
                <DataGridTextColumn Header="Базовая цена" Binding="{Binding BasePrice, StringFormat='{}{0}₽'}" Width="100"/>
                <DataGridTextColumn Header="Свободных мест" Binding="{Binding AvailableSeats}" Width="100"/>
                <DataGridTemplateColumn Header="Действия" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Button Content="✏️" Click="EditSession_Click"
                                        Background="#0066CC" Foreground="White" 
                                        Padding="8,4" FontSize="10"
                                        Tag="{Binding SessionId}"/>
                                <Button Content="🎫 Билеты" Click="ViewTickets_Click"
                                        Background="#00A651" Foreground="White" 
                                        Padding="8,4" FontSize="10"
                                        Tag="{Binding SessionId}"/>
                                <Button Content="🗑️" Click="DeleteSession_Click"
                                        Background="#FF6B35" Foreground="White" 
                                        Padding="8,4" FontSize="10"
                                        Tag="{Binding SessionId}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>