<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="700"
        x:Class="KinoZalMarsBlinVali.Views.MovieEditWindow"
        Title="Редактирование фильма"
        Width="600" Height="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding WindowTitle}" 
                   FontSize="20" FontWeight="Bold" Foreground="#0066CC"
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="15">
                <!-- Название -->
                <StackPanel>
                    <TextBlock Text="Название фильма *" FontWeight="SemiBold"/>
                    <TextBox x:Name="TitleTextBox" Height="35" FontSize="14"/>
                </StackPanel>

                <!-- Жанр -->
                <StackPanel>
                    <TextBlock Text="Жанр" FontWeight="SemiBold"/>
                    <TextBox x:Name="GenreTextBox" Height="35" FontSize="14"/>
                </StackPanel>

                <!-- Продолжительность -->
                <StackPanel>
                    <TextBlock Text="Продолжительность (минуты) *" FontWeight="SemiBold"/>
                    <TextBox x:Name="DurationTextBox" Height="35" FontSize="14"/>
                </StackPanel>

                <!-- Возрастное ограничение -->
                <StackPanel>
                    <TextBlock Text="Возрастное ограничение" FontWeight="SemiBold"/>
                    <ComboBox x:Name="AgeRatingComboBox" Height="35" FontSize="14">
                        <ComboBoxItem Content="0+"/>
                        <ComboBoxItem Content="6+"/>
                        <ComboBoxItem Content="12+"/>
                        <ComboBoxItem Content="16+"/>
                        <ComboBoxItem Content="18+"/>
                    </ComboBox>
                </StackPanel>

                <!-- Режиссер -->
                <StackPanel>
                    <TextBlock Text="Режиссер" FontWeight="SemiBold"/>
                    <TextBox x:Name="DirectorTextBox" Height="35" FontSize="14"/>
                </StackPanel>

                <!-- Актерский состав -->
                <StackPanel>
                    <TextBlock Text="Актерский состав" FontWeight="SemiBold"/>
                    <TextBox x:Name="CastTextBox" Height="80" FontSize="14" 
                             AcceptsReturn="True" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Описание -->
                <StackPanel>
                    <TextBlock Text="Описание" FontWeight="SemiBold"/>
                    <TextBox x:Name="DescriptionTextBox" Height="100" FontSize="14"
                             AcceptsReturn="True" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Путь к постеру -->
                <StackPanel>
                    <TextBlock Text="Путь к постеру" FontWeight="SemiBold"/>
                    <TextBox x:Name="PosterPathTextBox" Height="35" FontSize="14"/>
                </StackPanel>

                <!-- Статус -->
                <StackPanel>
                    <CheckBox x:Name="IsActiveCheckBox" Content="Активный фильм"
                              FontWeight="SemiBold" IsChecked="True"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Spacing="20" Margin="0,20,0,0">
            <Button Content="Сохранить" Click="Save_Click"
                    Background="#00A651" Foreground="White" 
                    Padding="30,10" FontWeight="Bold"/>
            <Button Content="Отмена" Click="Cancel_Click"
                    Background="#6c757d" Foreground="White" 
                    Padding="30,10" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>