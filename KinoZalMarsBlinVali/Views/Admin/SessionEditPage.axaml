<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="KinoZalMarsBlinVali.Views.SessionEditPage">
    
    <UserControl.Resources>
        <DataTemplate x:Key="MovieTemplate">
            <TextBlock Text="{Binding Title}"/>
        </DataTemplate>
        <DataTemplate x:Key="HallTemplate">
            <TextBlock Text="{Binding HallName}"/>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка назад -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="15" Margin="0,0,0,20">
            <Button Content="← Назад" Click="Back_Click"
                    Background="#6c757d" Foreground="White" 
                    Padding="15,8" FontWeight="Bold"/>
            <TextBlock Text="{Binding WindowTitle}" 
                       FontSize="24" FontWeight="Bold" Foreground="#0066CC"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Форма редактирования -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Width="500" HorizontalAlignment="Left">
                <StackPanel Spacing="15">
                    <!-- Фильм -->
                    <StackPanel>
                        <TextBlock Text="Фильм *" FontWeight="SemiBold" FontSize="14"/>
                        <ComboBox x:Name="MovieComboBox" Height="35" FontSize="14"
                                  ItemTemplate="{StaticResource MovieTemplate}"
                                  SelectionChanged="MovieComboBox_SelectionChanged"/>
                    </StackPanel>

                    <!-- Зал -->
                    <StackPanel>
                        <TextBlock Text="Зал *" FontWeight="SemiBold" FontSize="14"/>
                        <ComboBox x:Name="HallComboBox" Height="35" FontSize="14"
                                  ItemTemplate="{StaticResource HallTemplate}"/>
                    </StackPanel>

                    <!-- Дата и время начала -->
                    <StackPanel>
                        <TextBlock Text="Дата и время начала *" FontWeight="SemiBold" FontSize="14"/>
                        <DatePicker x:Name="StartDatePicker" Height="35" FontSize="14"
                                    SelectedDateChanged="StartDatePicker_SelectedDateChanged"/>
                        <TimePicker x:Name="StartTimePicker" Height="35" FontSize="14" Margin="0,5,0,0"
                                    SelectedTimeChanged="StartTimePicker_SelectedTimeChanged"/>
                    </StackPanel>

                    <!-- Базовая цена -->
                    <StackPanel>
                        <TextBlock Text="Базовая цена (₽) *" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox x:Name="BasePriceTextBox" Height="35" FontSize="14"
                                 Text="500"/>
                    </StackPanel>

                    <!-- Автоматический расчет окончания -->
                    <StackPanel>
                        <TextBlock Text="Дата и время окончания" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock x:Name="EndTimeText" FontSize="14" FontWeight="Bold"
                                   Foreground="#0066CC" Text="Рассчитывается автоматически"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Left" Spacing="20" Margin="0,20,0,0">
            <Button Content="Сохранить" Click="Save_Click"
                    Background="#00A651" Foreground="White" 
                    Padding="30,10" FontWeight="Bold" FontSize="14"/>
            <Button Content="Отмена" Click="Back_Click"
                    Background="#6c757d" Foreground="White" 
                    Padding="30,10" FontWeight="Bold" FontSize="14"/>
        </StackPanel>
    </Grid>
</UserControl>