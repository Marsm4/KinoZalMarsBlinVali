<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="KinoZalMarsBlinVali.Views.AdminEmployeesPage">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="👥 Управление сотрудниками" 
                   FontSize="24" FontWeight="Bold" Foreground="#0066CC"
                   Margin="0,0,0,20"/>

        <!-- Панель действий -->
        <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Spacing="15">
                <Button Content="➕ Добавить сотрудника" Click="AddEmployee_Click"
                        Background="#00A651" Foreground="White" 
                        Padding="20,10" FontWeight="Bold"/>
                <Button Content="🔄 Обновить" Click="Refresh_Click"
                        Background="#0066CC" Foreground="White" 
                        Padding="20,10" FontWeight="Bold"/>
                <TextBox x:Name="SearchTextBox" Width="300" 
                         Watermark="Поиск по имени, фамилии..."
                         VerticalContentAlignment="Center"/>
                <Button Content="🔍 Поиск" Click="Search_Click"
                        Background="#FF6B35" Foreground="White" 
                        Padding="20,10" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Таблица сотрудников -->
        <DataGrid Grid.Row="2" x:Name="EmployeesDataGrid" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding EmployeeId}" Width="60"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding Username}" Width="120"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="120"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="120"/>
                <DataGridTextColumn Header="Должность" Binding="{Binding Position}" Width="150"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="100"/>
                <DataGridCheckBoxColumn Header="Активен" Binding="{Binding IsActive}" Width="80"/>
                <DataGridTextColumn Header="Дата создания" 
                                   Binding="{Binding CreatedAt, StringFormat='{}{0:dd.MM.yyyy}'}" 
                                   Width="100"/>
                <DataGridTemplateColumn Header="Действия" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Button Content="✏️" Click="EditEmployee_Click"
                                        Background="#0066CC" Foreground="White" 
                                        Padding="8,4" FontSize="10"
                                        Tag="{Binding EmployeeId}"/>
                                <Button Content="👁️" Click="ViewEmployee_Click"
                                        Background="#00A651" Foreground="White" 
                                        Padding="8,4" FontSize="10"
                                        Tag="{Binding EmployeeId}"/>
                                <Button Content="🗑️" Click="DeleteEmployee_Click"
                                        Background="#FF6B35" Foreground="White" 
                                        Padding="8,4" FontSize="10"
                                        Tag="{Binding EmployeeId}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>