<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="KinoZalMarsBlinVali.Views.ConfirmWindow"
        Width="400" Height="200"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" x:Name="MessageText" 
                   TextWrapping="Wrap" VerticalAlignment="Center"
                   HorizontalAlignment="Center" FontSize="14"/>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Spacing="20">
            <Button Content="Да" Click="Yes_Click"
                    Background="#00A651" Foreground="White" 
                    Padding="20,10" FontWeight="Bold"/>
            <Button Content="Нет" Click="No_Click"
                    Background="#FF6B35" Foreground="White" 
                    Padding="20,10" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>