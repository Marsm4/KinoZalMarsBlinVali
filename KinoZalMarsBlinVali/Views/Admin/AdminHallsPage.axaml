<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="KinoZalMarsBlinVali.Views.AdminHallsPage">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="🏢 Управление залами" 
                   FontSize="24" FontWeight="Bold" Foreground="#0066CC"
                   Margin="0,0,0,20"/>

        <!-- Панель действий -->
        <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Spacing="15">
                <Button Content="➕ Добавить зал" Click="AddHall_Click"
                        Background="#00A651" Foreground="White" 
                        Padding="20,10" FontWeight="Bold"/>
                <Button Content="🔄 Обновить" Click="Refresh_Click"
                        Background="#0066CC" Foreground="White" 
                        Padding="20,10" FontWeight="Bold"/>
                <TextBox x:Name="SearchTextBox" Width="300" 
                         Watermark="Поиск по названию зала..."
                         VerticalContentAlignment="Center"/>
                <Button Content="🔍 Поиск" Click="Search_Click"
                        Background="#FF6B35" Foreground="White" 
                        Padding="20,10" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Таблица залов -->
        <DataGrid Grid.Row="2" x:Name="HallsDataGrid" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding HallId}" Width="60"/>
                <DataGridTextColumn Header="Название" Binding="{Binding HallName}" Width="150"/>
                <DataGridTextColumn Header="Всего мест" Binding="{Binding TotalSeats}" Width="80"/>
                <DataGridTextColumn Header="Ряды" Binding="{Binding SeatRows}" Width="60"/>
                <DataGridTextColumn Header="Места в ряду" Binding="{Binding SeatColumns}" Width="100"/>
                <DataGridTextColumn Header="Тип зала" Binding="{Binding HallType}" Width="100"/>
                <DataGridTemplateColumn Header="Действия" Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Button Content="✏️" Click="EditHall_Click"
                                        Background="#0066CC" Foreground="White" 
                                        Padding="8,4" FontSize="10"
                                        Tag="{Binding HallId}"/>
                                <Button Content="🗺️ Карта" Click="EditSeats_Click"
                                        Background="#00A651" Foreground="White" 
                                        Padding="8,4" FontSize="10"
                                        Tag="{Binding HallId}"/>
                                <Button Content="👁️ Просмотр" Click="ViewHall_Click"
                                        Background="#FFC107" Foreground="White" 
                                        Padding="8,4" FontSize="10"
                                        Tag="{Binding HallId}"/>
                                <Button Content="🗑️" Click="DeleteHall_Click"
                                        Background="#FF6B35" Foreground="White" 
                                        Padding="8,4" FontSize="10"
                                        Tag="{Binding HallId}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>