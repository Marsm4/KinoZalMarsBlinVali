<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:KinoZalMarsBlinVali.Converters"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="KinoZalMarsBlinVali.Views.MovieEditPage">
    <UserControl.Resources>
        <conv:ImagePathConverter x:Key="ImagePathConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка назад -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="15" Margin="0,0,0,20">
            <Button Content="← Назад" Click="Back_Click"
                    Background="#6c757d" Foreground="White" 
                    Padding="15,8" FontWeight="Bold"/>
            <TextBlock Text="{Binding WindowTitle}" 
                       FontSize="24" FontWeight="Bold" Foreground="#0066CC"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Форма редактирования -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Width="600" HorizontalAlignment="Left">
                <StackPanel Spacing="15">
                    <!-- Название -->
                    <StackPanel>
                        <TextBlock Text="Название фильма *" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox x:Name="TitleTextBox" Height="35" FontSize="14"/>
                    </StackPanel>

                    <!-- Жанр -->
                    <StackPanel>
                        <TextBlock Text="Жанр" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox x:Name="GenreTextBox" Height="35" FontSize="14"/>
                    </StackPanel>

                    <!-- Продолжительность -->
                    <StackPanel>
                        <TextBlock Text="Продолжительность (минуты) *" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox x:Name="DurationTextBox" Height="35" FontSize="14"/>
                    </StackPanel>

                    <!-- Возрастное ограничение -->
                    <StackPanel>
                        <TextBlock Text="Возрастное ограничение" FontWeight="SemiBold" FontSize="14"/>
                        <ComboBox x:Name="AgeRatingComboBox" Height="35" FontSize="14">
                            <ComboBoxItem Content="0+"/>
                            <ComboBoxItem Content="6+"/>
                            <ComboBoxItem Content="12+"/>
                            <ComboBoxItem Content="16+"/>
                            <ComboBoxItem Content="18+"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Режиссер -->
                    <StackPanel>
                        <TextBlock Text="Режиссер" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox x:Name="DirectorTextBox" Height="35" FontSize="14"/>
                    </StackPanel>

                    <!-- Актерский состав -->
                    <StackPanel>
                        <TextBlock Text="Актерский состав" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox x:Name="CastTextBox" Height="80" FontSize="14" 
                                 AcceptsReturn="True" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Описание -->
                    <StackPanel>
                        <TextBlock Text="Описание" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox x:Name="DescriptionTextBox" Height="100" FontSize="14"
                                 AcceptsReturn="True" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Постер -->
                    <StackPanel>
                        <TextBlock Text="Постер фильма" FontWeight="SemiBold" FontSize="14"/>
                        
                        <!-- Предпросмотр изображения -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" 
        Background="#F5F5F5" Width="200" Height="300" 
        Margin="0,0,0,10" HorizontalAlignment="Left">
    <Image Source="{Binding Text, ElementName=PosterPathTextBox, Converter={StaticResource ImagePathConverter}}"
           Stretch="Uniform"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>
</Border>
                        
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBox x:Name="PosterPathTextBox" Height="35" FontSize="14" 
                                     Width="300" Watermark="Путь к изображению"/>
                            <Button Content="📁 Выбрать файл" Click="SelectImage_Click" 
                                    Padding="10,5" Height="35"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Статус -->
                    <StackPanel>
                        <CheckBox x:Name="IsActiveCheckBox" Content="Активный фильм"
                                  FontWeight="SemiBold" IsChecked="True" FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Left" Spacing="20" Margin="0,20,0,0">
            <Button Content="Сохранить" Click="Save_Click"
                    Background="#00A651" Foreground="White" 
                    Padding="30,10" FontWeight="Bold" FontSize="14"/>
            <Button Content="Отмена" Click="Back_Click"
                    Background="#6c757d" Foreground="White" 
                    Padding="30,10" FontWeight="Bold" FontSize="14"/>
        </StackPanel>
    </Grid>
</UserControl>