<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="KinoZalMarsBlinVali.Views.CustomerTicketsPage">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="🎫 Мои билеты" 
                   FontSize="24" FontWeight="Bold" Foreground="#0066CC"
                   Margin="0,0,0,20"/>

        <!-- Фильтры -->
        <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Spacing="15">
                <ComboBox x:Name="StatusFilterComboBox" Width="150" SelectedIndex="0">
                    <ComboBoxItem Content="Все билеты"/>
                    <ComboBoxItem Content="Активные"/>
                    <ComboBoxItem Content="Забронированные"/>
                    <ComboBoxItem Content="Использованные"/>
                </ComboBox>
                <Button Content="🔄 Обновить" Click="Refresh_Click"
                        Background="#0066CC" Foreground="White" 
                        Padding="20,10" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Список билетов -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="TicketsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="10" 
                                BorderBrush="#e0e0e0" BorderThickness="1"
                                Margin="0,0,0,15" Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Информация о билете -->
                                <StackPanel Grid.Column="0" Spacing="5">
                                    <TextBlock Text="{Binding Session.Movie.Title}" 
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="#0066CC"/>
                                               
                                    <TextBlock Text="{Binding Session.StartTime, StringFormat='{}Начало: {0:dd.MM.yyyy HH:mm}'}" 
                                               FontSize="14" FontWeight="SemiBold"/>
                                               
                                    <TextBlock Text="{Binding SeatInfo}" 
                                               FontSize="14"/>
                                               
                                    <TextBlock Text="{Binding TicketType.TypeName}" 
                                               FontSize="12" Foreground="#666"/>
                                               
                                    <TextBlock Text="{Binding FinalPrice, StringFormat='Цена: {0}₽'}" 
                                               FontSize="14" FontWeight="Bold"/>
                                               
                                    <Border Background="{Binding StatusColor}" CornerRadius="5" 
                                            Padding="5,2" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding StatusText}" 
                                                   FontSize="10" FontWeight="Bold" 
                                                   Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <!-- Действия -->
                                <StackPanel Grid.Column="1" Orientation="Vertical" Spacing="5">
                                    <Button Content="📱 QR-код" Click="ShowQrCode_Click"
                                            Background="#0066CC" Foreground="White"
                                            Padding="15,8" FontWeight="Bold"
                                            Tag="{Binding TicketId}"
                                            IsVisible="{Binding IsActive}"/>
                                            
                                    <Button Content="❌ Отменить" Click="CancelTicket_Click"
                                            Background="#FF6B35" Foreground="White"
                                            Padding="15,8" FontWeight="Bold"
                                            Tag="{Binding TicketId}"
                                            IsVisible="{Binding CanCancel}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>