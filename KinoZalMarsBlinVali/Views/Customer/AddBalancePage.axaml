<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="KinoZalMarsBlinVali.Views.AddBalancePage">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="15" Margin="0,0,0,20">
            <Button Content="← Назад" Click="Back_Click"
                    Background="#6c757d" Foreground="White" 
                    Padding="15,8" FontWeight="SemiBold"/>
            <TextBlock Text="💳 Пополнение баланса" 
                       FontSize="24" FontWeight="Bold" Foreground="#0066CC"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="10" 
                BorderBrush="#e0e0e0" BorderThickness="1" Padding="30"
                Width="500" HorizontalAlignment="Left">
            <StackPanel Spacing="20">
                <TextBlock Text="Введите данные карты" 
                           FontSize="18" FontWeight="Bold" 
                           Foreground="#333" Margin="0,0,0,10"/>

                <StackPanel Spacing="15">
                    <StackPanel>
                        <TextBlock Text="Номер карты" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox x:Name="CardNumberTextBox" FontSize="14" Height="35"
                                 Watermark="0000 0000 0000 0000" MaxLength="19"/>
                    </StackPanel>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Срок действия" FontWeight="SemiBold" FontSize="14"/>
                            <TextBox x:Name="ExpiryDateTextBox" FontSize="14" Height="35"
                                     Watermark="ММ/ГГ" MaxLength="5"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="CVV код" FontWeight="SemiBold" FontSize="14"/>
                            <TextBox x:Name="CvvTextBox" FontSize="14" Height="35"
                                     Watermark="000" MaxLength="3" PasswordChar="*"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel>
                        <TextBlock Text="Сумма пополнения" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox x:Name="AmountTextBox" FontSize="14" Height="35"
                                 Watermark="Введите сумму" Text="500"/>
                        <TextBlock Text="Минимальная сумма: 100 руб" 
                                   FontSize="11" Foreground="#666" Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>

                <Button Content="💳 Пополнить баланс" Click="ProcessPayment_Click"
                        Background="#00A651" Foreground="White" 
                        Padding="20,12" FontWeight="Bold" FontSize="14"
                        HorizontalAlignment="Stretch"/>        
            </StackPanel>
        </Border>
    </Grid>
</UserControl>