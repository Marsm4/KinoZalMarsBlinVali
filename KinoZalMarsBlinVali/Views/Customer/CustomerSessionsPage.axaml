<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="KinoZalMarsBlinVali.Views.CustomerSessionsPage">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="🎬 Расписание сеансов" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#0066CC"
                   Margin="0,0,0,20"/>

        <!-- Выбор даты - горизонтальный скроллинг -->
        <Border Grid.Row="1" 
                Background="#F5F5F5" 
                CornerRadius="8" 
                Padding="15" 
                Margin="0,0,0,15">
            <StackPanel Orientation="Vertical" Spacing="10">
                <TextBlock Text="📅 Выберите дату:" 
                           FontWeight="SemiBold" 
                           FontSize="14"/>
                
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="DatesPanel" 
                                Orientation="Horizontal" 
                                Spacing="10"/>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- Фильтры -->
        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                CornerRadius="8" 
                Padding="15" 
                Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" 
                        Spacing="15">
                <ComboBox x:Name="GenreFilterComboBox" 
                         Width="150">
                    <ComboBoxItem Content="Все жанры"/>
                </ComboBox>
                          
                <TextBox x:Name="SearchTextBox" 
                         Width="300" 
                         VerticalContentAlignment="Center"
                         Watermark="Поиск по фильму..."/>
                         
                <Button Content="🔍 Поиск" 
                        Click="Search_Click"
                        Background="#0066CC"
                        Foreground="White"
                        Padding="20,10"/>
                        
                <Button Content="🔄 Обновить" 
                        Click="Refresh_Click"
                        Background="#00A651"
                        Foreground="White"
                        Padding="20,10"/>
            </StackPanel>
        </Border>

        <!-- Список фильмов -->
        <ScrollViewer Grid.Row="3" 
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock x:Name="DateTitleText" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#333"
                           Margin="0,0,0,20"/>
                
                <ItemsControl x:Name="MoviesItemsControl"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>