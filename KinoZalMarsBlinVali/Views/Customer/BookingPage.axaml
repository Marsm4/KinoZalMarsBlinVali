<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:KinoZalMarsBlinVali.Converters"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="KinoZalMarsBlinVali.Views.BookingPage">
    
    <UserControl.Resources>
        <conv:ImagePathConverter x:Key="ImagePathConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка назад -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="15" Margin="0,0,0,20">
            <Button Content="← Назад" Click="Back_Click"
                    Classes="secondary"
                    Padding="15,8"/>
            <TextBlock x:Name="TitleText" Text="Бронирование билета" 
                       Classes="title-large"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Информация о сеансе -->
        <Border Grid.Row="1" Classes="success-card" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Spacing="30">
                <Border Classes="card" Width="80" Height="120" Padding="0">
                    <Image Source="{Binding PosterPath, Converter={StaticResource ImagePathConverter}}" 
                           Width="80" Height="120" 
                           Stretch="UniformToFill"/>
                </Border>
                <StackPanel>
                    <TextBlock x:Name="MovieTitle" Classes="title-medium"/>
                    <TextBlock x:Name="SessionInfo" FontSize="14" Foreground="#666"/>
                    <TextBlock x:Name="HallInfo" FontSize="14" Foreground="#666"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Карта зала -->
            <Border Grid.Column="0" Classes="card" Margin="0,0,20,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical" Spacing="10">
                        <!-- Экран -->
                        <Border Background="#9E9E9E" Height="30" CornerRadius="5" Margin="50,0,50,20">
                            <TextBlock Text="ЭКРАН" FontWeight="Bold" Foreground="White" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Легенда -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Border Width="20" Height="20" Background="#4CAF50" CornerRadius="3"/>
                                <TextBlock Text="Свободно" FontSize="10"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Border Width="20" Height="20" Background="#FF9800" CornerRadius="3"/>
                                <TextBlock Text="VIP" FontSize="10"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Border Width="20" Height="20" Background="#F44336" CornerRadius="3"/>
                                <TextBlock Text="Занято" FontSize="10"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Border Width="20" Height="20" Background="#9E9E9E" CornerRadius="3"/>
                                <TextBlock Text="Недоступно" FontSize="10"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Border Width="20" Height="20" Background="#2196F3" CornerRadius="3"/>
                                <TextBlock Text="Выбрано" FontSize="10"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Места -->
                        <ItemsControl x:Name="SeatsItemsControl" HorizontalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical" Spacing="3" HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="3" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding RowNumber}" 
                                                   FontWeight="Bold" Width="30"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                        <ItemsControl ItemsSource="{Binding Seats}" HorizontalAlignment="Center">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal" Spacing="3" HorizontalAlignment="Center"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding Seat.SeatNumber}"
                                                            Width="35" Height="35" FontSize="10"
                                                            Click="SeatButton_Click"
                                                            Tag="{Binding}"
                                                            IsEnabled="{Binding IsAvailable}"
                                                            Background="{Binding SeatBackground}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Панель бронирования -->
            <Border Grid.Column="1" Classes="card">
                <StackPanel Spacing="20">
                    <TextBlock Text="Выбранные места:" Classes="title-small"/>
                    
                    <ItemsControl x:Name="SelectedSeatsItemsControl" MaxHeight="200">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F8F9FA" CornerRadius="8" Padding="12" Margin="0,0,0,8"
                                        BorderBrush="#e0e0e0" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="{Binding SeatInfoText}" FontWeight="SemiBold" FontSize="12"/>
                                        <TextBlock Text="{Binding Price, StringFormat='Цена: {0}₽'}" FontSize="11" Foreground="#666"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <StackPanel>
                        <TextBlock Text="Тип билета:" Classes="title-small"/>
                        <ComboBox x:Name="TicketTypeComboBox" Classes="standard"
                                  SelectedIndex="0"
                                  SelectionChanged="TicketType_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TypeName}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <Border Background="#E8F5E8" CornerRadius="8" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Итого:" FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:Name="TotalPriceText" FontSize="24" FontWeight="Bold" 
                                       Foreground="#00A651" Text="0₽"/>
                        </StackPanel>
                    </Border>

                    <Button Content="🎫 Забронировать" Click="ConfirmBooking_Click"
                            Classes="success"
                            Padding="20,12" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>