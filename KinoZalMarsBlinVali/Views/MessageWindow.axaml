<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
        x:Class="KinoZalMarsBlinVali.Views.MessageWindow"
        Width="300" Height="150"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" x:Name="MessageText" 
                   TextWrapping="Wrap" VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
        
        <Button Grid.Row="1" Content="OK" Click="OK_Click"
                HorizontalAlignment="Center" Padding="20,5"
                Background="#0066CC" Foreground="White"/>
    </Grid>
</Window>