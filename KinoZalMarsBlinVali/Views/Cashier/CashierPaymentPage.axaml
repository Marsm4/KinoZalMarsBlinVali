<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="KinoZalMarsBlinVali.Views.CashierPaymentPage">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="💰 Оплата билетов" 
                   FontSize="24" FontWeight="Bold" Foreground="#0066CC"
                   Margin="0,0,0,20"/>

        <!-- Поиск бронирования -->
        <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Spacing="15">
                <TextBox x:Name="SearchTextBox" Width="300" 
                         Watermark="Номер билета или email клиента"
                         VerticalContentAlignment="Center"/>
                         
                <Button Content="🔍 Найти" Click="SearchReservation_Click"
                        Background="#0066CC" Foreground="White" 
                        Padding="20,10" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Список найденных бронирований -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ReservationsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="10" 
                                BorderBrush="#e0e0e0" BorderThickness="1"
                                Margin="0,0,0,15" Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Информация о бронировании -->
                                <StackPanel Grid.Column="0" Spacing="5">
                                    <TextBlock Text="{Binding Session.Movie.Title}" 
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="#0066CC"/>
                                               
                                    <TextBlock Text="{Binding Session.StartTime, StringFormat='{}Начало: {0:dd.MM.yyyy HH:mm}'}" 
                                               FontSize="14"/>
                                               
                                    <TextBlock Text="{Binding SeatInfo}" 
                                               FontSize="14"/>
                                               
                                    <TextBlock Text="{Binding Customer.Email, StringFormat='Клиент: {0}'}" 
                                               FontSize="12" Foreground="#666"/>
                                               
                                    <TextBlock Text="{Binding FinalPrice, StringFormat='Сумма: {0}₽'}" 
                                               FontSize="16" FontWeight="Bold"/>
                                               
                                    <TextBlock Text="{Binding ReservationExpires, StringFormat='{}До: {0:HH:mm}'}" 
                                               FontSize="12" Foreground="#FF6B35"
                                               FontWeight="Bold"/>
                                </StackPanel>

                                <!-- Кнопка оплаты -->
                                <StackPanel Grid.Column="1" Orientation="Vertical" Spacing="5">
                                    <Button Content="💳 Оплатить" Click="ProcessPayment_Click"
                                            Background="#00A651" Foreground="White"
                                            Padding="15,8" FontWeight="Bold"
                                            Tag="{Binding TicketId}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>