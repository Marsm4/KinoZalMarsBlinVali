<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="KinoZalMarsBlinVali.Views.CashierReportsPage">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="📊 Отчеты кассира" 
                   FontSize="24" FontWeight="Bold" Foreground="#0066CC"
                   Margin="0,0,0,20"/>

        <!-- Параметры отчета -->
        <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Период отчета -->
                <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="10" Margin="0,0,30,0">
                    <TextBlock Text="Период отчета:" FontWeight="SemiBold" FontSize="14"/>
                    
                    <StackPanel Orientation="Vertical" Spacing="5">
                        <TextBlock Text="С:" FontSize="12" Foreground="#666"/>
                        <DatePicker x:Name="StartDatePicker" Width="300" FontSize="12"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Vertical" Spacing="5">
                        <TextBlock Text="По:" FontSize="12" Foreground="#666"/>
                        <DatePicker x:Name="EndDatePicker" Width="300" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

  <!-- Дополнительные параметры -->
<!-- Альтернативный вариант с StackPanel -->
<StackPanel Grid.Column="1" Orientation="Vertical" Spacing="10">
    <TextBlock Text="Тип отчета:" FontWeight="SemiBold" FontSize="14"/>
    
    <StackPanel Orientation="Horizontal" Spacing="15">
        <RadioButton x:Name="AllTimeReport" Content="За все время" 
                   GroupName="ReportType" IsChecked="True" FontSize="12"/>
        <RadioButton x:Name="PeriodReport" Content="За период" 
                   GroupName="ReportType" FontSize="12"/>
        <RadioButton x:Name="TodayReport" Content="За сегодня" 
                   GroupName="ReportType" FontSize="12"/>
        <RadioButton x:Name="WeekReport" Content="За неделю" 
                   GroupName="ReportType" FontSize="12"/>
        <RadioButton x:Name="MonthReport" Content="За месяц" 
                   GroupName="ReportType" FontSize="12"/>
    </StackPanel>

    <!-- Фильтры -->
    <StackPanel Orientation="Horizontal" Spacing="15" Margin="0,10,0,0">
        <CheckBox x:Name="IncludeSoldTickets" Content="Включать проданные билеты" 
                IsChecked="True" FontSize="12"/>
        <CheckBox x:Name="IncludeReservations" Content="Включать бронирования" 
                IsChecked="True" FontSize="12"/>
        <CheckBox x:Name="IncludeServices" Content="Включать доп. услуги" 
                IsChecked="True" FontSize="12"/>
    </StackPanel>
</StackPanel>

                <!-- Кнопки действий -->
                <StackPanel Grid.Column="2" Orientation="Vertical" Spacing="10" Margin="20,0,0,0">
                    <Button Content="📈 Сформировать отчет" Click="GenerateReport_Click"
                            Background="#0066CC" Foreground="White" 
                            Padding="20,12" FontWeight="Bold" FontSize="12"/>
                            
                    <Button Content="🔄 Сбросить фильтры" Click="ResetFilters_Click"
                            Background="#666666" Foreground="White" 
                            Padding="20,12" FontWeight="Bold" FontSize="12"/>
                            
                    <!--   <Button Content="🖨️ Печать отчета" Click="PrintReport_Click"
                            Background="#00A651" Foreground="White" 
                            Padding="20,12" FontWeight="Bold" FontSize="12"/> -->
                </StackPanel>
            </Grid>
        </Border>

        <!-- Статистика и результаты -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="15">
                <!-- Сводная статистика -->
                <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="#e0e0e0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="📊 Сводная статистика" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="5">
                                <TextBlock Text="Всего продаж" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="TotalSalesText" Text="0" FontSize="18" FontWeight="Bold" Foreground="#0066CC"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Vertical" Spacing="5">
                                <TextBlock Text="Общая выручка" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="TotalRevenueText" Text="0₽" FontSize="18" FontWeight="Bold" Foreground="#00A651"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Orientation="Vertical" Spacing="5">
                                <TextBlock Text="Активные брони" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="ActiveReservationsText" Text="0" FontSize="18" FontWeight="Bold" Foreground="#FF6B35"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3" Orientation="Vertical" Spacing="5">
                                <TextBlock Text="Начислено бонусов" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="BonusAddedText" Text="0" FontSize="18" FontWeight="Bold" Foreground="#9C27B0"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="4" Orientation="Vertical" Spacing="5">
                                <TextBlock Text="Доп. услуги" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="ServicesRevenueText" Text="0₽" FontSize="18" FontWeight="Bold" Foreground="#FF9800"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Детальная статистика по типам -->
                <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="#e0e0e0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="📈 Детальная статистика" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="5">
                                <TextBlock Text="VIP билеты" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="VipTicketsText" Text="0" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Vertical" Spacing="5">
                                <TextBlock Text="Стандартные билеты" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="StandardTicketsText" Text="0" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Orientation="Vertical" Spacing="5">
                                <TextBlock Text="Средний чек" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="AverageTicketText" Text="0₽" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3" Orientation="Vertical" Spacing="5">
                                <TextBlock Text="Отмененные билеты" FontSize="12" Foreground="#666"/>
                                <TextBlock x:Name="CancelledTicketsText" Text="0" FontSize="14" FontWeight="Bold" Foreground="#F44336"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Последние транзакции -->
                <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="#e0e0e0" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="💳 Последние транзакции" 
                                      FontWeight="Bold" FontSize="16"/>
                            <TextBlock Grid.Column="1" x:Name="TransactionsCountText" 
                                      Text="Всего: 0" FontSize="12" Foreground="#666"/>
                        </Grid>
                        
                        <DataGrid x:Name="TransactionsDataGrid" AutoGenerateColumns="False" 
                                 IsReadOnly="True" Height="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Время" 
                                                   Binding="{Binding TransactionTime, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                                                   Width="150"/>
                                <DataGridTextColumn Header="Тип" 
                                                   Binding="{Binding TransactionType}" 
                                                   Width="120"/>
                                <DataGridTextColumn Header="Сумма" 
                                                   Binding="{Binding Amount, StringFormat='{}{0}₽'}" 
                                                   Width="100"/>
                                <DataGridTextColumn Header="Метод оплаты" 
                                                   Binding="{Binding PaymentMethod}" 
                                                   Width="120"/>
                                <DataGridTextColumn Header="Описание" 
                                                   Binding="{Binding Description}" 
                                                   Width="250"/>
                                <DataGridTextColumn Header="ID билета" 
                                                   Binding="{Binding TicketId}" 
                                                   Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>