<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style Selector="TextBlock.title-large">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#0066CC"/>
    </Style>
    
    <Style Selector="TextBlock.title-medium">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#0066CC"/>
    </Style>
    
    <Style Selector="TextBlock.title-small">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#333333"/>
    </Style>
    
    <Style Selector="Button.primary">
        <Setter Property="Background" Value="#0066CC"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>
    
    <Style Selector="Button.primary:pointerover">
        <Setter Property="Background" Value="#0052A3"/>
    </Style>
    
    <Style Selector="Button.success">
        <Setter Property="Background" Value="#00A651"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>
    
    <Style Selector="Button.success:pointerover">
        <Setter Property="Background" Value="#008F43"/>
    </Style>
    
    <Style Selector="Button.danger">
        <Setter Property="Background" Value="#FF6B35"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>
    
    <Style Selector="Button.danger:pointerover">
        <Setter Property="Background" Value="#E55A2B"/>
    </Style>
    
    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="#6C757D"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>
    
    <Style Selector="Button.secondary:pointerover">
        <Setter Property="Background" Value="#5A6268"/>
    </Style>
    
    <Style Selector="Border.card">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="20"/>
    </Style>
    
    <Style Selector="Border.info-card">
        <Setter Property="Background" Value="#E3F2FD"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="15"/>
    </Style>
    
    <Style Selector="Border.success-card">
        <Setter Property="Background" Value="#E8F5E8"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="15"/>
    </Style>
    
    <Style Selector="TextBox.standard">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>
    
    <Style Selector="ComboBox.standard">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Padding" Value="10,5"/>
    </Style>

</Styles>